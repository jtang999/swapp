<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".NearbySwaps">

    <TextView
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/nearby_title"
        android:textAlignment="center"
        android:textColor="#F4F7F9"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createPost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/createbutton"
        android:text="@string/add"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TitleBar"
        app:layout_constraintEnd_toEndOf="@+id/TitleBar"
        app:layout_constraintTop_toTopOf="@+id/TitleBar"
        app:layout_constraintVertical_bias="0.484" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="380dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/searchbar"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar" />

    <TextView
        android:id="@+id/toggleOutline"
        android:layout_width="380dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/searchbar"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/freeServicesToggle"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:background="@drawable/modetoggle"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/free_services_toggle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleOutline"
        app:layout_constraintStart_toStartOf="@+id/toggleOutline"
        app:layout_constraintTop_toTopOf="@+id/toggleOutline"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/swapToggle"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:background="@drawable/modetoggle"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/swap_toggle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleOutline"
        app:layout_constraintStart_toEndOf="@+id/freeServicesToggle"
        app:layout_constraintTop_toTopOf="@+id/toggleOutline" />

    <Button
        android:id="@+id/needsFreeToggle"
        android:layout_width="158dp"
        android:layout_height="30dp"
        android:background="@drawable/modetoggle"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/needs_free_service_toggle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleOutline"
        app:layout_constraintEnd_toEndOf="@+id/toggleOutline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/swapToggle"
        app:layout_constraintTop_toTopOf="@+id/toggleOutline" />

    <ScrollView
        android:id="@+id/Posts"
        android:layout_width="367dp"
        android:layout_height="505dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleOutline"
        app:layout_constraintVertical_bias="0.151">

        <LinearLayout
            android:id="@+id/PostLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.swap.PostCardView
                android:layout_width="match_parent"
                android:layout_height="110dp"></com.example.swap.PostCardView>


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/postProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="189dp"
        android:layout_height="194dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleOutline" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/default_profile_alt_dark"
        app:layout_constraintStart_toStartOf="@+id/TitleBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="69dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileButton"
        tools:text="@string/user_name" />


</androidx.constraintlayout.widget.ConstraintLayout>