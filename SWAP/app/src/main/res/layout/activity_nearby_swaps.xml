<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".NearbySwaps">

    <TextView
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/nearby_title"
        android:textAlignment="center"
        android:textColor="#F4F7F9"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="102dp"
        android:layout_height="14dp"
        android:text="@string/free_services_toggle"
        android:textAlignment="center"
        android:textColor="@color/colorBodyLight"
        android:textSize="10dp"
        android:translationZ="90dp"
        app:layout_constraintEnd_toEndOf="@+id/freeServicesToggle"
        app:layout_constraintStart_toStartOf="@+id/freeServicesToggle"
        app:layout_constraintTop_toBottomOf="@+id/freeServicesToggle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="59dp"
        android:layout_height="14dp"
        android:text="@string/swap_toggle"
        android:textAlignment="center"
        android:textColor="@color/colorBodyLight"
        android:textSize="10dp"
        android:translationZ="200dp"
        app:layout_constraintEnd_toEndOf="@+id/swapToggle"
        app:layout_constraintStart_toStartOf="@+id/swapToggle"
        app:layout_constraintTop_toBottomOf="@+id/swapToggle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="101dp"
        android:layout_height="14dp"
        android:text="@string/needs_free_service_toggle"
        android:textAlignment="center"
        android:textColor="@color/colorBodyLight"
        android:textSize="10dp"
        android:translationZ="90dp"
        app:layout_constraintEnd_toEndOf="@+id/needsFreeToggle"
        app:layout_constraintStart_toStartOf="@+id/needsFreeToggle"
        app:layout_constraintTop_toBottomOf="@+id/needsFreeToggle" />

    <Button
        android:id="@+id/createPost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/createbutton"
        android:text="@string/add"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TitleBar"
        app:layout_constraintEnd_toEndOf="@+id/TitleBar"
        app:layout_constraintTop_toTopOf="@+id/TitleBar"
        app:layout_constraintVertical_bias="0.484" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/searchbar"
        android:gravity="center"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        app:queryBackground="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleBar"/>

    <ImageButton
        android:id="@+id/freeServicesToggle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/toggle_button"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/give_icon_dark"
        android:text="@string/free_services_toggle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/swapToggle"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <ImageButton
        android:id="@+id/swapToggle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/toggle_button"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/swap_icon_light"
        android:text="@string/swap_toggle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <ImageButton
        android:id="@+id/needsFreeToggle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/toggle_button"
        android:fontFamily="sans-serif-medium"

        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/recieve_icon_dark"
        android:text="@string/needs_free_service_toggle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#535353"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/swapToggle"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <ScrollView
        android:id="@+id/Posts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:id="@+id/PostLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.swap.PostCardView
                android:id="@+id/rand"
                android:layout_width="match_parent"
                android:layout_height="110dp"></com.example.swap.PostCardView>


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/postProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="189dp"
        android:layout_height="194dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Posts" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="69dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileButton"
        tools:text="@string/user_name" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/default_profile_alt_dark" />

    <LinearLayout
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swapToggle">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="491dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swapToggle"
            tools:context="com.example.swap.NearbySwaps.MapsMarkerActivity" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/mapToggle"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/toggle_button"
        android:scaleType="centerCrop"
        android:src="@mipmap/map_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />


</androidx.constraintlayout.widget.ConstraintLayout>